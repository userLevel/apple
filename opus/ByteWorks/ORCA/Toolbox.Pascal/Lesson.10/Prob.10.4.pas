{---------------------------------------------------------------}{                                                               }{  Custom Font Demo                                             }{                                                               }{---------------------------------------------------------------}program Fonts (input);uses Common, QuickDrawII, FontMgr;const   bold   = 1;                          {bold bit flag}var   id: fontID;                          {font ID}   r: rect;                             {screen rectangle}begin{set up the tools}StartDesk(320);PenNormal;SetSolidPenPat(15);GetPortRect(r);PaintRect(r);{set up the font}SetForeColor(7);SetTextMode(modeForeCopy);id.famNum := times;id.fontStyle := bold;id.fontSize := 36;InstallFont(id, 0);{draw the text}MoveTo(10, 50);DrawString(@'Hello, world.');{wait for a keypress}readln;EndDesk;end.