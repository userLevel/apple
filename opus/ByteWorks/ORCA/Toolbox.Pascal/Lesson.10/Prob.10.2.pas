{---------------------------------------------------------------}{                                                               }{  Text Mode Demo                                               }{                                                               }{---------------------------------------------------------------}program TextModes (input);uses Common, QuickDrawII;var   i: integer;                          {loop/index variable}   pat: pattern;                        {pen pattern}   r: rect;                             {screen's grafPort rect}begin{set up the tools}StartGraph(320);PenNormal;{paint the screen as a red and yellow checkerboard}for i := 0 to 31 do   pat[i] := $79;for i := 0 to 3 do begin   pat[i] := $97;   pat[i+8] := $97;   pat[i+16] := $97;   pat[i+24] := $97;   end; {for}SetPenPat(pat);GetPortRect(r);PaintRect(r);{set up the text colors}SetForeColor(4);SetBackColor(15);{draw in the various text modes}MoveTo(20,  25 ); SetTextMode(modeCopy    ); DrawString(@'modeCopy');MoveTo(95,  35 ); SetTextMode(modeOr      ); DrawString(@'modeOr');MoveTo(170, 25 ); SetTextMode(modeXOR     ); DrawString(@'modeXOR');MoveTo(245, 35 ); SetTextMode(modeBIC     ); DrawString(@'modeBIC');MoveTo(20,  75 ); SetTextMode(notCopy     ); DrawString(@'notCopy');MoveTo(95,  85 ); SetTextMode(notOr       ); DrawString(@'notOr');MoveTo(170, 75 ); SetTextMode(notXOR      ); DrawString(@'notXOR');MoveTo(245, 85 ); SetTextMode(notBIC      ); DrawString(@'notBIC');MoveTo(20,  125); SetTextMode(modeForeCopy); DrawString(@'modeForeCopy');MoveTo(95,  135); SetTextMode(modeForeOr  ); DrawString(@'modeForeOr');MoveTo(170, 125); SetTextMode(modeForeXOR ); DrawString(@'modeForeXOR');MoveTo(245, 135); SetTextMode(modeForeBIC ); DrawString(@'modeForeBIC');MoveTo(20,  175); SetTextMode(notForeCopy ); DrawString(@'notForeCopy');MoveTo(95,  185); SetTextMode(notForeOr   ); DrawString(@'notForeOr');MoveTo(170, 175); SetTextMode(notForeXOR  ); DrawString(@'notForeXOR');MoveTo(245, 185); SetTextMode(notForeBIC  ); DrawString(@'notForeBIC');{wait for a keypress}readln;EndGraph;end.