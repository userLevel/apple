program Beep;uses Common, EventMgr, QuickDrawII, MscToolSet;var   beepRect: rect;                      {active beep rectangle}   done: boolean;                       {are we done, yet?}   myEvent: eventRecord;                {event record}beginStartDesk(640);InitCursor;with beepRect do begin   top := 50;   bottom := 150;   left := 160;   right := 480;   end; {with}done := false;repeat   if GetNextEvent(everyEvent, myEvent) then      if myEvent.eventWhat = keyDownEvt then         done := true;   if PtInRect(myEvent.eventWhere, beepRect) then      SysBeep;until done;EndDesk;end.