(*$Keep 'Savage'*)(*--------------------------------------------------------------*)(*                                                              *)(*  Savage                                                      *)(*                                                              *)(*  Test the speed (and stability) of floating point functions. *)(*                                                              *)(*  To get the best performance from the desktop development    *)(*  environment, be sure to turn debugging off from the         *)(*  Compile Dialog.  Use the Compile command from the Run menu  *)(*  to get the compile dialog.                                  *)(*                                                              *)(*--------------------------------------------------------------*)MODULE Savage;FROM InOut IMPORT WriteString, WriteLn, WriteLongReal;FROM LongMath IMPORT sin, cos, arctan, exp, ln, sqrt;CONST  loop  = 250;VAR  i: INTEGER;  sum: LONGREAL;  PROCEDURE tan (x: LONGREAL): LONGREAL;  BEGIN    RETURN sin(x)/cos(x);  END tan;BEGINWriteString('Start...');WriteLn;sum := 1.0;FOR i := 1 TO loop-1 DO  sum := tan(arctan(exp(ln(sqrt(sum*sum)))))+1.0L;END;WriteString('sum = ');WriteLongReal(sum, 6);WriteLn;END Savage.