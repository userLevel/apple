(*$Keep 'WorldOBJ'*)(*$CDEV 'Driver'*)MODULE WorldCDev;FROM Common IMPORT Ref;FROM ControlManager IMPORT CtlHandle, NewControl2;FROM QuickDrawII IMPORT GrafPortPtr;CONST   createCDev = 7;			(*message numbers*)   aboutCDev = 8;PROCEDURE Driver(message: INTEGER; data1, data2: LONGINT): LONGINT;VAR  wPtr: GrafPortPtr;			(*our window pointer*)  PROCEDURE DoAbout;  (*    Show the help info  *)  CONST    flags = 9;				(*flags (indicates resource)*)    resID = 257;			(*help text resource ID*)  VAR    ch:   CtlHandle;    ref:  Ref;  BEGIN    ref := Ref(resID);    ch := NewControl2(wPtr, flags, ref); (*draw the text (it's a stattext control)*)  END DoAbout;  PROCEDURE DoCreate;  (*    Create the controls  *)  CONST    flags = 9;				(*flags (indicates resource)*)    resID = 256;			(*help text resource ID*)  VAR    ch:   CtlHandle;			(*control handle*)    ref:  Ref;  BEGIN    ref := Ref(resID);    ch := NewControl2(wPtr, flags, ref); (*create the controls*)  END DoCreate;BEGIN  wPtr := VAL(GrafPortPtr, data1);	(*get our window pointer (most calls)*)  CASE message OF    createCDev: DoCreate;    |    aboutCDev:  DoAbout;    ELSE  END;  RETURN 1;END Driver;BEGINEND WorldCDev.