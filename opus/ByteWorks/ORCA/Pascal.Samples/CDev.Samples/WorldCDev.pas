                  {help text resource ID}   var      ch: ctlRecHndl;                   {control handle}   begin {DoAbout}   ch := NewControl2(wPtr, flags, resID); {draw the text (it's a stattext control)}   end; {DoAbout}   procedure DoCreate;   { Create the controls                                        }   const      flags = $0009;                    {flags (indicates resource)}      resID = 256;                      {help text resource ID}   var      ch: ctlRecHndl;                   {control handle}   begin {DoCreate}   ch := NewControl2(wPtr, flags, resID); {create the controls}   end; {DoCreate}begin {Driver}wPtr := pointer(data1);                 {get our window pointer (most calls)}case message of   createCDev: DoCreate;   aboutCDev:  DoAbout;   otherwise: ;   end; {case}Driver := 1;end; {Driver}beginend.