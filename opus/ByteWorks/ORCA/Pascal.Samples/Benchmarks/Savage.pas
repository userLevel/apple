{$keep 'Savage'}{$optimize -1}{--------------------------------------------------------------}{                                                              }{  Savage                                                      }{                                                              }{  Test the speed (and stability) of floating point functions. }{                                                              }{  To get the best performance from the desktop development    }{  environment, be sure to turn debugging off from the         }{  Compile Dialog.  Use the Compile command from the Run menu  }{  to get the compile dialog.                                  }{                                                              }{--------------------------------------------------------------}program Savage(output);const  loop  = 250;var  i: integer;  sum: double;beginwriteln('Start...');sum := 1.0;for i := 1 to loop-1 do  sum := tan(arctan(exp(ln(sqrt(sum*sum)))))+1.0;writeln('sum = ',sum);end.