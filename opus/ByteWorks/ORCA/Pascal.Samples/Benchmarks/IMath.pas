{$keep 'IMath'}{$optimize -1}{--------------------------------------------------------------}{                                                              }{  Integer Math                                                }{                                                              }{  Test the speed of the four basic integer math operations.   }{                                                              }{  To get the best performance from the desktop development    }{  environment, be sure to turn debugging off from the         }{  Compile Dialog.  Use the Compile command from the Run menu  }{  to get the compile dialog.                                  }{                                                              }{--------------------------------------------------------------}program IMath(output);const  iter = 10000;var  a,b,c,d,e,f: integer;  i: integer;beginwriteln('Start timing...');b := 1000;c := 10;d := 100;e := 5;f := 10;for i := 1 to iter do begin  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  a := b+c-d*e div f;  end; {for}if a = 960 then  writeln('Stop timing - correct result.')else  writeln('INCORRECT RESULT.');end.