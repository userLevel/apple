      REM Draw a ball sliding across the screen from 0, 0 to 180, 180      DIM X AS INTEGER , Y AS INTEGER :! Coordinates for the ball      DIM I AS INTEGER :! loop counter      ! Set up for graphics      HGR      SETPENMODE (0)      SETPENSIZE (4, 4)      ! Initialize the ball position.      X = 0      Y = 0      ! Animate the ball.      FOR I = 1 TO 180        ! Erase the old ball.        SETSOLIDPENPAT (0)        MOVETO (X, Y)        LINETO (X, Y)        ! Compute the new ball position.        X = X + 1        Y = Y + 1        ! Draw the ball at the new position.        SETSOLIDPENPAT (15)        MOVETO (X, Y)        LINETO (X, Y)      NEXT      INPUT "";A$