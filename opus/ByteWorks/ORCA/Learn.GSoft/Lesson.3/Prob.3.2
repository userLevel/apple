      REM Gradually fill an area of the screen with white dots.      DIM MAX AS INTEGER :! Number of dots to draw      DIM I AS INTEGER :! Loop counter      DIM X AS INTEGER , Y AS INTEGER :! coordinates of the point      DIM MAXX AS INTEGER , MAXY AS INTEGER :! maximum value for x and y      DIM MINX AS INTEGER , MINY AS INTEGER :! minimum value for x and y      ! Set up the number of points to draw      MAX = 5551      ! Set up the range of points      MINX = 10      MAXX = 100      MINY = 10      MAXY = 70      ! Set up the graphics screen      HGR      SETPENMODE (0)      SETSOLIDPENPAT (15)      ! Draw the dots      FOR I = 1 TO MAX        ! Get an x coordinate in the range minX to maxX        X = MINX + RND (1) * (MAXX - MINX + 1)        IF X = MAXX + 1 THEN          X = MAXX        END IF        ! Get a y coordinate in the range minY to maxY        Y = MINY + RND (1) * (MAXY - MINY + 1)        IF Y = MAXY + 1 THEN          Y = MAXY        END IF        ! Draw the dot        MOVETO (X, Y)        LINETO (X, Y)      NEXT      ! Wait for a keypress before exiting the program      INPUT "";A$