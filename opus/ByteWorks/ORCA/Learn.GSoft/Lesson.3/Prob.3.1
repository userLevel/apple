      REM Roll two dice twenty times.      DIM SIDES AS INTEGER :! # of sides on the dice      DIM NUMDICE AS INTEGER :! # of dice to throw      DIM I AS INTEGER , J AS INTEGER :! loop/index variables      DIM VALUE AS INTEGER :! value rolled on a die      ! Set up the number of dice and number of sides.      SIDES = 6      NUMDICE = 2      FOR I = 1 TO 20        FOR J = 1 TO NUMDICE          VALUE = 1 + RND (1) * SIDES          IF VALUE = SIDES + 1 THEN            VALUE = SIDES          END IF          PRINT VALUE, ;        NEXT        PRINT      NEXT