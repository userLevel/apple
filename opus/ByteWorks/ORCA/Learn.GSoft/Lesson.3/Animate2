      REM Draw a ball sliding across the screen from 0, 0 to 180, 180      DIM X AS INTEGER , Y AS INTEGER :! Coordinates for the ball      DIM I AS INTEGER :! loop counters      ! Set up for graphics      HGR      SETPENMODE (2)      SETPENSIZE (4, 4)      SETSOLIDPENPAT (15)      ! Initialize the ball position.      X = 0      Y = 0      ! Draw the ball in the starting position.      MOVETO (X, Y)      LINETO (X, Y)      ! Animate the ball.      FOR I = 1 TO 180        ! Draw the ball at the new position.        MOVETO (X + 1, Y + 1)        LINETO (X + 1, Y + 1)        ! Erase the old ball.        MOVETO (X, Y)        LINETO (X, Y)        ! Update the ball position.        X = X + 1        Y = Y + 1      NEXT      INPUT "";A$