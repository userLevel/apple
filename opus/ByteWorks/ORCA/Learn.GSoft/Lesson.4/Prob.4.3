      REM Draw 10 balls bouncing around the screen.      ! Declare the coordinates and velicities.      DIM X0 AS INTEGER , Y0 AS INTEGER , VX0 AS INTEGER , VY0 AS INTEGER      DIM X1 AS INTEGER , Y1 AS INTEGER , VX1 AS INTEGER , VY1 AS INTEGER      DIM X2 AS INTEGER , Y2 AS INTEGER , VX2 AS INTEGER , VY2 AS INTEGER      DIM X3 AS INTEGER , Y3 AS INTEGER , VX3 AS INTEGER , VY3 AS INTEGER      DIM X4 AS INTEGER , Y4 AS INTEGER , VX4 AS INTEGER , VY4 AS INTEGER      DIM X5 AS INTEGER , Y5 AS INTEGER , VX5 AS INTEGER , VY5 AS INTEGER      DIM X6 AS INTEGER , Y6 AS INTEGER , VX6 AS INTEGER , VY6 AS INTEGER      DIM X7 AS INTEGER , Y7 AS INTEGER , VX7 AS INTEGER , VY7 AS INTEGER      DIM X8 AS INTEGER , Y8 AS INTEGER , VX8 AS INTEGER , VY8 AS INTEGER      DIM X9 AS INTEGER , Y9 AS INTEGER , VX9 AS INTEGER , VY9 AS INTEGER      ! Set up the graphics window.      CALL INITGRAPHICS      SETPENMODE (2)      SETPENSIZE (4, 4)      ! Set the initial ball positions.      X0 = RANDOMVALUE(319)      Y0 = RANDOMVALUE(199)      X1 = RANDOMVALUE(319)      Y1 = RANDOMVALUE(199)      X2 = RANDOMVALUE(319)      Y2 = RANDOMVALUE(199)      X3 = RANDOMVALUE(319)      Y3 = RANDOMVALUE(199)      X4 = RANDOMVALUE(319)      Y4 = RANDOMVALUE(199)      X5 = RANDOMVALUE(319)      Y5 = RANDOMVALUE(199)      X6 = RANDOMVALUE(319)      Y6 = RANDOMVALUE(199)      X7 = RANDOMVALUE(319)      Y7 = RANDOMVALUE(199)      X8 = RANDOMVALUE(319)      Y8 = RANDOMVALUE(199)      X9 = RANDOMVALUE(319)      Y9 = RANDOMVALUE(199)      ! Set the initial ball velocities.      VX0 = RANDOMVALUE(9) - 5      VY0 = RANDOMVALUE(9) - 5      VX1 = RANDOMVALUE(9) - 5      VY1 = RANDOMVALUE(9) - 5      VX2 = RANDOMVALUE(9) - 5      VY2 = RANDOMVALUE(9) - 5      VX3 = RANDOMVALUE(9) - 5      VY3 = RANDOMVALUE(9) - 5      VX4 = RANDOMVALUE(9) - 5      VY4 = RANDOMVALUE(9) - 5      VX5 = RANDOMVALUE(9) - 5      VY5 = RANDOMVALUE(9) - 5      VX6 = RANDOMVALUE(9) - 5      VY6 = RANDOMVALUE(9) - 5      VX7 = RANDOMVALUE(9) - 5      VY7 = RANDOMVALUE(9) - 5      VX8 = RANDOMVALUE(9) - 5      VY8 = RANDOMVALUE(9) - 5      VX9 = RANDOMVALUE(9) - 5      VY9 = RANDOMVALUE(9) - 5      ! Draw the balls in their initial positions.      MOVETO (X0, Y0)      LINETO (X0, Y0)      MOVETO (X1, Y1)      LINETO (X1, Y1)      MOVETO (X2, Y2)      LINETO (X2, Y2)      MOVETO (X3, Y3)      LINETO (X3, Y3)      MOVETO (X4, Y4)      LINETO (X4, Y4)      MOVETO (X5, Y5)      LINETO (X5, Y5)      MOVETO (X6, Y6)      LINETO (X6, Y6)      MOVETO (X7, Y7)      LINETO (X7, Y7)      MOVETO (X8, Y8)      LINETO (X8, Y8)      MOVETO (X9, Y9)      LINETO (X9, Y9)      ! Animate the balls.      FOR I = 1 TO 100        CALL MOVEBALL(X0, Y0, VX0, VY0)        CALL MOVEBALL(X1, Y1, VX1, VY1)        CALL MOVEBALL(X2, Y2, VX2, VY2)        CALL MOVEBALL(X3, Y3, VX3, VY3)        CALL MOVEBALL(X4, Y4, VX4, VY4)        CALL MOVEBALL(X5, Y5, VX5, VY5)        CALL MOVEBALL(X6, Y6, VX6, VY6)        CALL MOVEBALL(X7, Y7, VX7, VY7)        CALL MOVEBALL(X8, Y8, VX8, VY8)        CALL MOVEBALL(X9, Y9, VX9, VY9)      NEXT      INPUT "";A$      END      !----------------------------------------------------------      !      ! InitGraphics - Set up for graphics      !      !----------------------------------------------------------      SUB INITGRAPHICS      HGR      SETPENMODE (0)      SETSOLIDPENPAT (15)      END SUB      !----------------------------------------------------------      !      ! MoveBall - move the ball      !      ! Move a ball in the graphics window.  If the ball hits one      ! of the sides, the direction of the ball is changed.      !      ! Parameters:      !    X, Y - position of the ball      !    VX, VY - velocity of the ball      !      !----------------------------------------------------------      SUB MOVEBALL(X AS INTEGER , Y AS INTEGER , VX AS INTEGER , VY AS INTEGER )      DIM X2 AS INTEGER , Y2 AS INTEGER :! New position for the ball      ! Find the new X position for the ball      X2 = X + VX      IF X2 < 0 THEN        X2 = 0        VX = - VX      ELSE IF X2 > 319 THEN        X2 = 319        VX = - VX      END IF      ! Find the new Y position for the ball      Y2 = Y + VY      IF Y2 < 0 THEN        Y2 = 0        VY = - VY      ELSE IF Y2 > 199 THEN        Y2 = 199        VY = - VY      END IF      ! Draw the ball at the new position.      MOVETO (X2, Y2)      LINETO (X2, Y2)      ! Erase the old ball.      MOVETO (X, Y)      LINETO (X, Y)      ! Update the ball position.      X = X2      Y = Y2      END SUB      !----------------------------------------------------------      !      ! RandomValue - Return a random number in the range 1 to max      !      ! Parameters:      !    max - maximum allowed value for the random number      !      ! Returns: Random number in the range 1..max      !      !----------------------------------------------------------      FUNCTION RANDOMVALUE(MAX AS INTEGER ) AS INTEGER      DIM VALUE AS INTEGER :! Random value to return      VALUE = 1 + RND (1) * MAX      IF VALUE = MAX + 1 THEN        VALUE = MAX      END IF      RANDOMVALUE = VALUE      END FUNCTION