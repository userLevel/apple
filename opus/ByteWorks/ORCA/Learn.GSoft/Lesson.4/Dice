      REM This program rolls two dice 20 times.      DIM SIDES AS INTEGER :! # of sides on the dice      DIM NUMDICE AS INTEGER :! # of dice to throw      DIM I AS INTEGER , J AS INTEGER :! loop/index variables      DIM VALUE AS INTEGER :! value rolled on a die      ! Set up the number of dice and number of sides.      SIDES = 6      NUMDICE = 2      FOR I = 1 TO 20        FOR J = 1 TO NUMDICE          PRINT RANDOMVALUE(SIDES), ;        NEXT        PRINT      NEXT      END      !----------------------------------------------------------      !      ! RandomValue - Return a random number in the range 1 to max      !      ! Parameters:      !    max - maximum allowed value for the random number      !      ! Returns: Random number in the range 1..max      !      !----------------------------------------------------------      FUNCTION RANDOMVALUE(MAX AS INTEGER ) AS INTEGER      DIM VALUE AS INTEGER :! Random value to return      VALUE = 1 + RND (1) * MAX      IF VALUE = MAX + 1 THEN        VALUE = MAX      END IF      RANDOMVALUE = VALUE      END FUNCTION