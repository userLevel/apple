      REM Draw a big X across the graphics screen.      DIM MAXX AS INTEGER , MAXY AS INTEGER :! Size of the graphics screen      ! Initialize the size of the graphics screen.      MAXX = 320      MAXY = 200      ! Initialize the graphics screen.      CALL INITGRAPHICS      ! Draw a big x across the screen.      CALL X      ! Wait for the user to press return.      INPUT "";A$      END      !----------------------------------------------------------      !      ! InitGraphics - Set up for graphics      !      !----------------------------------------------------------      SUB INITGRAPHICS      HGR      SETPENMODE (0)      SETSOLIDPENPAT (15)      END SUB      !----------------------------------------------------------      !      ! X - Draw a big X across the screen      !      ! Shared variables:      !    maxx, maxy - size of the screen      !      !----------------------------------------------------------      SUB X      SHARED MAXX, MAXY      MOVETO (0, 0)      LINETO (MAXX, MAXY)      MOVETO (0, MAXY)      LINETO (MAXX, 0)      END SUB