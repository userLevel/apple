      REM Draw a checker board      ! Set up the graphics window.      CALL INITGRAPHICS      ! Draw the checkerboard.      CALL DRAWBOARD      ! Wait for the user to press return.      INPUT "";A$      END      !----------------------------------------------------------      !      ! DrawBoard - draw the checkerboard      !      !----------------------------------------------------------      SUB DRAWBOARD      DIM ROW AS INTEGER , COLUMN AS INTEGER :! position of the square      DIM COLOR AS INTEGER :! color of the square      ! Start with a gray square.      COLOR = 12      ! Draw the board.      FOR ROW = 1 TO 8        FOR COLUMN = 1 TO 8          ! Draw one square.          CALL RECTANGLE(COLUMN * 20 + 5, COLUMN * 20 + 25, ROW * 20 + 5, ROW * 20 + 25, COLOR)          ! Flip the color.          IF COLOR = 12 THEN            COLOR = 5          ELSE            COLOR = 12          END IF        NEXT        ! Flip the color.        IF COLOR = 12 THEN          COLOR = 5        ELSE          COLOR = 12        END IF      NEXT      END SUB      !----------------------------------------------------------      !      ! InitGraphics - Set up for graphics      !      !----------------------------------------------------------      SUB INITGRAPHICS      HGR      SETPENMODE (0)      SETSOLIDPENPAT (15)      END SUB      !----------------------------------------------------------      !      ! Rectangle - Draw a rectangle and outline it in white.      !      ! Parameters:      !    left, right, top, bottom - edges of the rectangle      !    color - color of the inside of the rectangle      !      !----------------------------------------------------------      SUB RECTANGLE(LEFT AS INTEGER , RIGHT AS INTEGER , TOP AS INTEGER , BOTTOM AS INTEGER , COLOR AS INTEGER )      DIM I AS INTEGER :! Loop variable      ! Draw the rectangle.      SETSOLIDPENPAT (COLOR)      FOR I = TOP + 1 TO BOTTOM - 1        MOVETO (LEFT, I)        LINETO (RIGHT, I)      NEXT      ! Outline the rectangle in white.      SETSOLIDPENPAT (15)      MOVETO (LEFT, TOP)      LINETO (LEFT, BOTTOM)      LINETO (RIGHT, BOTTOM)      LINETO (RIGHT, TOP)      LINETO (LEFT, TOP)      END SUB