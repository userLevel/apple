      REM Use recursion to reverse the elements in a linked list.      TYPE LISTRECORD        NEXTP AS POINTER TO LISTRECORD        VALUE AS INTEGER      END TYPE      TYPE LISTPTR AS POINTER TO LISTRECORD      DIM I AS INTEGER :! loop variable      DIM FIRST AS LISTPTR:! the first element in the list      DIM P AS LISTPTR:! work pointer      ! Create the list      FOR I = 1 TO 10        ALLOCATE (P)        IF P <> NIL THEN          P^.NEXTP = FIRST          P^.VALUE = I          FIRST = P        END IF      NEXT      ! print the list      CALL PRINTLIST(FIRST)      END      !----------------------------------------------------------      !      ! PrintList - Print the values in a list in reverse order      !      ! Parameters:      !    p - first item in the list      !      !----------------------------------------------------------      SUB PRINTLIST(P AS LISTPTR)      IF P <> NIL THEN        CALL PRINTLIST(P^.NEXTP)        PRINT P^.VALUE      END IF      END SUB