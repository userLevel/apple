      REM Print a poker hand.      DIM CARDS(52) AS INTEGER :! the deck of cards      DIM I AS INTEGER :! loop/index variable      ! Create the deck of cards.      FOR I = 1 TO 52        CARDS(I) = I      NEXT      ! Shuffle the deck.      CALL SHUFFLE(CARDS())      ! Deal one hand.      FOR I = 1 TO 5        CALL PRINTCARD(CARDS(I))        PRINT " of ";        CALL PRINTSUIT(CARDS(I))        PRINT      NEXT      END      !----------------------------------------------------------      !      ! PrintCard - Print the name of a card      !      ! Parameters:      !    V - point value of the card      !      !----------------------------------------------------------      SUB PRINTCARD(V AS INTEGER )      DIM VALUE AS INTEGER :! value of the card      VALUE = V      WHILE VALUE > 13        VALUE = VALUE - 13      WEND      SELECT CASE VALUE        CASE 1: PRINT "Ace";        CASE 2: PRINT "Two";        CASE 3: PRINT "Three";        CASE 4: PRINT "Four";        CASE 5: PRINT "Five";        CASE 6: PRINT "Six";        CASE 7: PRINT "Seven";        CASE 8: PRINT "Eight";        CASE 9: PRINT "Nine";        CASE 10: PRINT "Ten";        CASE 11: PRINT "Jack";        CASE 12: PRINT "Queen";        CASE 13: PRINT "King";      END SELECT      END SUB      !----------------------------------------------------------      !      ! PrintSuit - Print the suit of a card      !      ! Parameters:      !    V - point value of the card      !      !----------------------------------------------------------      SUB PRINTSUIT(V AS INTEGER )      DIM SUIT AS INTEGER :! Card suit number      SUIT = (V - 1) / 13      SELECT CASE SUIT        CASE 0: PRINT "Spades";        CASE 1: PRINT "Hearts";        CASE 2: PRINT "Clubs";        CASE 3: PRINT "Diamonds";      END SELECT      END SUB      !----------------------------------------------------------      !      ! RandomValue - Return a random number in the range 1 to max      !      ! Parameters:      !    max - maximum allowed value for the random number      !      ! Returns: Random number in the range 1..max      !      !----------------------------------------------------------      FUNCTION RANDOMVALUE(MAX AS INTEGER ) AS INTEGER      DIM VALUE AS INTEGER :! Random value to return      VALUE = 1 + RND (1) * MAX      IF VALUE = MAX + 1 THEN        VALUE = MAX      END IF      RANDOMVALUE = VALUE      END FUNCTION      !----------------------------------------------------------      !      ! Shuffle - Shuffle a deck of cards      !      ! Parameters:      !    cards - array containing the cards      !      !----------------------------------------------------------      SUB SHUFFLE(CARDS() AS INTEGER )      DIM I AS INTEGER :! loop/index variable      DIM J AS INTEGER :! index of the randomly chosen card to swap      DIM TEMP AS INTEGER :! used to swap two cards      FOR I = 1 TO 52        J = RANDOMVALUE(52)        TEMP = CARDS(I)        CARDS(I) = CARDS(J)        CARDS(J) = TEMP      NEXT      END SUB