      REM Extract the words that make up a long integer      TYPE VALUERECORD      CASE 1        L AS LONG      CASE 2        LSW AS INTEGER        MSW AS INTEGER      END TYPE      DIM VALUE AS VALUERECORD      DO        INPUT "Enter a long integer: ";VALUE.L        PRINT "Least significant word: ";VALUE.LSW        PRINT "Most significant word : ";VALUE.MSW        PRINT      LOOP WHILE VALUE.L <> 0