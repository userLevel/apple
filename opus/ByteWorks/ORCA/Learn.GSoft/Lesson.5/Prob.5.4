      REM This program tests the UPPERCASE$ function, which      REM converts any string to all uppercase characters.      REM      REM Enter a string with no characters to stop the prgram      DIM INSTRING AS STRING :! input string      DIM OUTSTRING AS STRING :! output string      ! Loop until there is no input string.      DO        ! Get a string.        LINE INPUT "String to convert: ";INSTRING        ! Convert the string to uppercase.        OUTSTRING = UPPERCASE$(INSTRING)        PRINT "Converted string : ";OUTSTRING        PRINT      LOOP WHILE LEN (INSTRING) <> 0      END      !----------------------------------------------------------      !      ! Uppercase$ - Convert a string to uppercase      !      ! Parameters:      !    s - string to convert      !      ! Returns: String with all of the lowercase characters      !         converted to uppercase characters      !      !----------------------------------------------------------      FUNCTION UPPERCASE$(S AS STRING ) AS STRING      DIM I AS INTEGER :! loop variable      DIM S1 AS STRING :! remaining characters to convert      DIM S2 AS STRING :! uppercase string      DIM VALUE AS INTEGER :! value of the first character in s1      S1 = S      S2 = ""      WHILE LEN (S1) <> 0        VALUE = ASC (S1)        IF (VALUE >= 97) AND (VALUE <= 122) THEN          VALUE = VALUE - 32        END IF        S2 = S2 + CHR$ (VALUE)        S1 = RIGHT$ (S1, LEN (S1) - 1)      WEND      UPPERCASE$ = S2      END FUNCTION