      REM This program reads in a list of integers, then counts the      REM number of times each integer from 1 to 5 appears in the       REM list.      TYPE LISTRECORD        NEXTP AS POINTER TO LISTRECORD        I AS INTEGER      END TYPE      TYPE LISTPOINTER AS POINTER TO LISTRECORD      DIM FIRST AS LISTPOINTER:! points to the top item in the first      CALL GETLIST(FIRST)      CALL COUNTLIST(FIRST)      END      !----------------------------------------------------------      !      ! CountList - Count the elements in the list      !      ! Parameters:      !    first - pointer to the head of the list      !      !----------------------------------------------------------      SUB COUNTLIST(FIRST AS LISTPOINTER)      DIM TEMP AS LISTPOINTER:! work pointer      DIM COUNTS(5) AS INTEGER :! array of frequency counts      DIM I AS INTEGER :! loop counter      ! set the counts to 0      FOR I = 1 TO 5        COUNTS(I) = 0      NEXT      ! do the count      TEMP = FIRST      WHILE TEMP <> NIL        IF (TEMP^.I >= 1) AND (TEMP^.I <= 5) THEN          COUNTS(TEMP^.I) = COUNTS(TEMP^.I) + 1        END IF        TEMP = TEMP^.NEXTP      WEND      ! print the results      FOR I = 1 TO 5        PRINT I, COUNTS(I)      NEXT      END SUB      !----------------------------------------------------------      !      ! GetList - Read a list from the keyboard      !      ! Parameters:      !    first - pointer to the head of the list      !      !----------------------------------------------------------      SUB GETLIST(FIRST AS LISTPOINTER)      DIM I AS INTEGER :! value read from the keyboard      DIM TEMP AS LISTPOINTER:! work pointer      ! initialize the list pointer      FIRST = NIL      DO        ! read a value        INPUT "Enter a number: ";I        IF I <> 0 THEN          ! allocate a record          ALLOCATE (TEMP)          ! place i in the record          TEMP^.I = I          ! put the record in the list          TEMP^.NEXTP = FIRST          FIRST = TEMP        END IF      LOOP UNTIL I = 0      END SUB