      REM Change Prob.8.4 to lowercase.      ! Open the input and output files.      OPEN "Prob.8.4" FOR INPUT AS #1      OPEN "Prob.8.4.a" FOR OUTPUT AS #2      ! Copy the lines from one file to another, converting them      ! to lowercase as we go.      WHILE NOT EOF (1)        LINE INPUT #1, LINE$        PRINT #2, LOWERCASE$(LINE$)      WEND      ! Close the files.      CLOSE #1      CLOSE #2      END      !----------------------------------------------------------      !      ! Lowercase$ - Convert a string to lowercase      !      ! Parameters:      !    s - string to convert      !      ! Returns: String with all of the uppercase characters      !         converted to lowercase characters      !      !----------------------------------------------------------      FUNCTION LOWERCASE$(S AS STRING ) AS STRING      DIM I AS INTEGER :! loop variable      DIM S1 AS STRING :! remaining characters to convert      DIM S2 AS STRING :! uppercase string      DIM VALUE AS INTEGER :! value of the first character in s1      S1 = S      S2 = ""      WHILE LEN (S1) <> 0        VALUE = ASC (S1)        IF (VALUE >= 65) AND (VALUE <= 90) THEN          VALUE = VALUE + 32        END IF        S2 = S2 + CHR$ (VALUE)        S1 = RIGHT$ (S1, LEN (S1) - 1)      WEND      LOWERCASE$ = S2      END FUNCTION