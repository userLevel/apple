      REM Write the third record of the file MailingList.      TYPE ADDRESS        NAMEFIELD AS STRING        STREET AS STRING        CITY AS STRING        STATE AS STRING        ZIP AS LONG      END TYPE      CONST SIZE = 200:! Number of bytes in one file record      DIM ADDR AS ADDRESS:! Address read from the file      ! Write the record.      OPEN "MailingList" FOR RANDOM AS #1 LEN SIZE      GET #1, 3, ADDR      PRINT ADDR.NAMEFIELD      PRINT ADDR.STREET      PRINT ADDR.CITY;", ";ADDR.STATE;"  ";ADDR.ZIP      CLOSE #1