{ Upper                                                 }{                                                       }{ This program converts a program to uppercase          }{ characters.  You are prompted for the input and       }{ output files.                                         }program Upper(input,output);var   ch: char;                    {character from the file}   inFile, outFile: text;       {input and output files}   name: string[80];            {file name}   function ToUpper(ch: char): char;   { Convert a character to uppercase                   }   {                                                    }   { Parameters:                                        }   {    ch - character to convert                       }   {                                                    }   { Returns: Uppercase equivalent of ch                }   begin {ToUpper}   if (ch >= 'a') and (ch <= 'z') then      ch := chr(ord(ch)-ord('a')+ord('A'));   ToUpper := ch;   end; {ToUpper}beginwrite('Input file name:');      {open the input file}readln(name);reset(inFile, name);write('Output file name:');     {open the output file}readln(name);rewrite(outFile, name);while not eof(inFile) do begin  {translate the file}   if eoln(inFile) then begin      readln(inFile);      writeln(outFile);      end {if}   else begin      read(inFile, ch);      write(outFile, ToUpper(ch));      end; {else}   end; {while}end.