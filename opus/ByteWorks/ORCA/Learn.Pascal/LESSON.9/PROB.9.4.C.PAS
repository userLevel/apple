{ Create File3 }program Merge(output);type   str5 = string[5];var   outfile: file of integer;   procedure Merge (name: str5);   { Add the file to outfile                    }   {                                            }   { Parameters:                                }   {    name - name of the file to add          }   {                                            }   { Variables:                                 }   {    outfile - output file variable          }   var      i: integer;               {file value}      infile: file of integer;  {file}   begin {Merge}   reset(infile, name);   while not eof(infile) do begin      read(infile, i);      write(outfile, i);      end; {while}   end; {Merge}begin{open the file for output}rewrite(outfile, 'file3');{merge the two files}Merge('file1');Merge('file2');end.