{ Guess a number }program Guess(input, output);var   i: integer;                        {input value}   value: integer;                    {the number to guess}   done: integer;                     {are we done yet?}begin{Introduce the game}writeln('In this game, you will try to');writeln('guess a number.  I need a hint to');writeln('help me pick numbers, though.');writeln;{get a seed for the random number generator}writeln('Please type a number between 1');write  ('and 30000: ');readln(i);seed(i);   repeat   {pick a number from 1 to 100}   repeat      repeat         value := RandomInteger;      until value > 0;   until value <= 100;      {let the player guess the number}   repeat      write('Your guess: ');      readln(i);      if i > value then         writeln(i:1, ' is to high.');      if i < value then         writeln(i:1, ' is to low.');   until i = value;   writeln(i:1, ' is correct!');   {play another round?}   repeat      repeat         writeln('Play again?  Enter 0');         write  ('for no, 1 for yes:');         readln(done);      until done >= 0;   until done <= 1;   writeln;until done = 0;end.