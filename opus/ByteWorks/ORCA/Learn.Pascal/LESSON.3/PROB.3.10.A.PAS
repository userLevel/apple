program Bounce(input,output);uses Common, QuickDrawII;const   maxX = 200;   maxY = 80;var   i: integer;                         {loop counter}   x,y: integer;                       {coordinates of the point}beginSetPenMode(0);                         {set up for graphics}SetPenSize(6,2);x := 0;                                {initialize the ball position}y := 0;for i := 1 to 50 do begin              {animate the ball}   SetSolidPenPat(3);   MoveTo(x,y);   LineTo(x,y);   x := x+1;   y := y+1;   SetSolidPenPat(0);   MoveTo(x,y);   LineTo(x,y);   end; {for}end.