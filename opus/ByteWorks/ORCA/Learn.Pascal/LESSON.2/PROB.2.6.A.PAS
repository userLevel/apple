{ gas cost at 4% inflation }program Inflation(output);const   currentCost = 1.00;            {current cost of the item}   inflation = 4.0;               {inflation rate}var   year: integer;                 {number of years}   cost: real;                    {cost of the item}begincost := currentCost;for year := 1990 to 1999 do   cost := cost + cost*inflation/100.0;writeln('Cost of a ', currentCost:10:2, ' item after 10 years is ',   cost:10:2);end.