{ See how long it will take to reach a population of 50,000 }program Population(output);const   currentPopulation = 30000.0;   {initial population of the city}   growth = 10.0;                 {population growth rate}var   year: integer;                 {year}   population: real;              {population during year}beginyear := 1988;                     {current year -1}population := currentPopulation;  {initialize the population}while population < 50000.0 do begin {keep going until we hit 50,000}   year := year+1;                {new year}   population := population       {add in this year's growth}      + population*growth/100.0;   writeln(year:6, population:10:1); {write the status}   end; {while}end.