{ Extract the words that make up a long integer }program Extract(input, output);var   value: record      case boolean of         true:  (l: longint);         false: (lsw,msw: integer);      end;beginrepeat   write('long integer:');   readln(value.l);   writeln('least significant word: ', value.lsw:1);   writeln('most significant word : ', value.msw:1);   writeln;until value.l = 0;end.