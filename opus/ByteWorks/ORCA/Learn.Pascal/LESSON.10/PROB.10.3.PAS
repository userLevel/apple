{ Reverse the characters in a string }program Reverse (input, output);const   lineLength = 80;                     {max length of a line}var   i: 1..lineLength;                    {loop index}   line: string[lineLength];            {input line}beginrepeat   write('String:');   readln(line);   for i := length(line) downto 1 do      write(line[i]);   writeln;   writeln;until length(line) = 0;end.