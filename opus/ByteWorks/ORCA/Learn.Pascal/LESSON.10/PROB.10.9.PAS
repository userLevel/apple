{ Draw an X across the graphics window }program Shapes;uses Common, QuickDrawII;var   r: rect;                             {shape rectangle}beginSetPenMode(0);                          {set up QuickDraw}SetPenSize(3,1);SetSolidPenPat(2);GetPortRect(r);                         {get the size of the window}MoveTo(r.h1,r.v1);                      {draw the X}LineTo(r.h2,r.v2);MoveTo(r.h1,r.v2);LineTo(r.h2,r.v1);end.