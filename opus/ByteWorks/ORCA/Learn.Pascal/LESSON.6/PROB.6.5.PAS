{ Test the bool function, which converts an integer to a boolean. }program TestBool(output);var   i: integer;                          {loop variable}   function bool (i: integer): boolean;   { Convert an integer to a boolean.                           }   {                                                            }   { Parameters:                                                }   {    i: integer to convert                                   }   {                                                            }   { Returns:                                                   }   {    False if i = 0; true otherwise.                         }   begin {bool}   bool := i <> 0;   end; {bool}beginfor i := -1 to 2 do   writeln('bool(', i:1, ') = ', bool(i));end.