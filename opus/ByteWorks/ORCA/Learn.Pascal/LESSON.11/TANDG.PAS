{ Exploring text mixed with graphics. }program TextAndGraphics(output);uses Common, QuickDrawII;   procedure InitGraphics;   { Standard graphics initialization.                            }   var      r: rect;                  {screen size}   begin {InitGraphics}   StartGraph(640);             {initialize QuickDraw}   SetPenMode(0);               {pen mode = copy}   SetPenSize(3,1);             {use a square pen}   SetSolidPenPat(3);           {paint the screen white}   GetPortRect(r);   PaintRect(r);   SetSolidPenPat(0);           {use a black pen}   end; {InitGraphics}beginInitGraphics;                   {set up the graphics screen}SetForeColor(0);                {write some text}SetBackColor(3);MoveTo(10,10);writeln('You can get');write  ('some ');SetForeColor(3);SetBackColor(0);writeln('interesting effects');SetForeColor(2);SetBackColor(3);writeln('by mixing text');SetForeColor(1);write  ('with graphics!');EndGraph;                       {shut down QuickDraw}end.