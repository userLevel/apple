 MACRO&lab longm&lab ANOP rep #%00100000 longa on MEND MACRO&lab shortm&lab ANOP sep #%00100000 longa off MEND MACRO&lab writestr &addr&lab ANOP AIF C:&addr=0,.c lclc &char&char amid &addr,1,1 AIF "&char"="#",.a pea &addr|-16 pea &addr ago .b.a lclc &str&str amid &addr,3,L:&addr-3 bra ~b&SYSCNT~a&SYSCNT dc i1'L:&str',C'&str'~b&SYSCNT pea ~a&SYSCNT|-16 pea ~a&SYSCNT.b ldx #$1C0C jsl $E10000 MEXIT.c phy pha AGO .b MEND MACRO&lab writeln &addr&lab ANOP AIF C:&addr=0,.c lclc &char&char amid &addr,1,1 AIF "&char"="#",.a pea &addr|-16 pea &addr ago .b.a lclc &str&str amid &addr,3,L:&addr-3 bra ~b&SYSCNT~a&SYSCNT dc I1'L:&str',C'&str'~b&SYSCNT pea ~a&SYSCNT|-16 pea ~a&SYSCNT.b ldx #$1A0C~c&SYSCNT jsl $E10000 MEXIT.c pea +(~c&SYSCNT+1)|-16 pea ~c&SYSCNT+1 AGO .b MEND MACRO&lab writech &SYSOPR&lab ANOP AIF C:&SYSOPR=0,.a lda &SYSOPR.a pha ldx #$180C jsl $E10000 MEND MACRO&lab _QUIT &params&lab jsl $E100A8 dc i2"$29" dc i4"&params" MEND MACRO&lab str &string&lab dc i1'L:&string',C'&string' MEND